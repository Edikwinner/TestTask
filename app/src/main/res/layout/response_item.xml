<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="30dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:background="@color/dark_gray"
           android:paddingHorizontal="10dp"
           android:paddingVertical="6dp">
           <ImageView
               android:src="@drawable/calendar"
               android:id="@+id/transport_type"
               android:layout_marginEnd="8dp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="start"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">
                <TextView
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/thread_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"/>
                <TextView
                    android:id="@+id/thread_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/transport_type_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:maxLines="1"/>
            </LinearLayout>
           <LinearLayout
               android:layout_weight="6"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_gravity="end"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:textStyle="bold"
                       android:id="@+id/arrival_date"
                       android:gravity="start"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <TextView
                       android:textStyle="bold"
                       android:id="@+id/arrival_time"
                       android:gravity="start"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <TextView
                       android:id="@+id/arrival_title"
                       android:gravity="start"
                       android:textSize="12sp"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1" />
                   <TextView
                       android:id="@+id/arrival_terminal"
                       android:gravity="start"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:textSize="12sp"
                       android:text="@string/time_in_travel"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <TextView
                       android:id="@+id/trip_time"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <View
                       android:id="@+id/empty_view"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:textStyle="bold"
                       android:id="@+id/departure_date"
                       android:gravity="end"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <TextView
                       android:textStyle="bold"
                       android:id="@+id/departure_time"
                       android:gravity="end"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
                   <TextView
                       android:id="@+id/departure_title"
                       android:textSize="12sp"
                       android:gravity="end"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1" />
                   <TextView
                       android:id="@+id/departure_terminal"
                       android:gravity="end"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"/>
               </LinearLayout>

           </LinearLayout>
       </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>